+function getArraysEqual(a, b) {
+    if (a instanceof Array && b instanceof Array) {
+        if (a.length !== b.length)
+            return false;
+        for (let i = 0; i < a.length; i++) {
+            if (!getArraysEqual(a[i], b[i]))
